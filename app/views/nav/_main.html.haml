.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a{:class => "btn btn-navbar", 
        :data => { :toggle => "collapse", :target => ".nav-collapse" }}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a{:class => "brand", :href => url_for(home_path)} Babysleep

      .nav-collapse.collapse
        %ul.nav
          - navigation.each do |link|
            - if (link.include?(:method))
              %li
                = link_to(link[:text], link[:url], :method => link[:method])
            - else
              %li
                = link_to(link[:text], link[:url])

           